
@{
    ViewBag.Title = "Login";
}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>


<body style="background-repeat: no-repeat; background-size: 100%;background-image: Url(@Url.Content("~/Images/Verser_bg.jpg"));background-size: cover;">


        <div class="col-sm-4 col-md-offset-4" style="margin-top:200px;">
            <div class="panel panel-login" style="border:none">
                <div class="panel-body">
                    <div class="row" align="center">
                        <img src="~/Images/CompanyLogo.jpg" />
                        @using (Html.BeginForm("submit", "login", FormMethod.Post))
                        {

                            <p style="color:mediumpurple;font-size:medium;font-weight:600;padding:10px;">  NUmobile Orders </p>
                            <div class="col-sm-8 col-sm-offset-2">
                                <div class="input-group col-sm-10" style="justify-content:center">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                    <input type="text" name="username" id="username" tabindex="1" style="border:1px solid lightgrey" class="form-control" placeholder="Username">
                                </div><br />

                                <div class="input-group col-sm-10" style="justify-content:center">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                    <input type="password" name="password" id="password" tabindex="2" class="form-control" placeholder="Password" style="border:1px solid lightgrey">
                                </div><br />

                                <div class="form-group col-sm-12" style="justify-content:center">
                                    <br />
                                    <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Log In" style="background-color:grey;">
                                </div>
                            </div>

                            <div>
                                @if (TempData["ErrorMessage"] != null)
                                {
                                    <p style="color:red;padding-left:60px;">@TempData["ErrorMessage"].ToString()</p>
                                }
                            </div>
                        }
                    </div>
                
                </div>
            </div>
        </div>


</body>




<style>
    body {
        padding-top: 0px;
    }

