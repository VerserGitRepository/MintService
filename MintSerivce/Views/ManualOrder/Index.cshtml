    function HideShowModal() {

        $.ajax({
            type: "GET",
            url: "./ShowModal",
            success: function (data) {
                $.confirm({
                    boxWidth: '800px',
                    useBootstrap: false,
                    title: '',
                    content: data,
                    closeIcon: true,

                    buttons: {
                        yes: { isHidden: true }
                    },
                });

            }
        });

    }
</script>