<div id='AccessoriesModal' class='modal'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="submit" class="close" id="modelclosebtn" data-backdrop="false" onclick="closeModelbutton()" >&times;</button>
                <h4 class="modal-title">Update Accessories Count</h4>
            </div>
            <div id='myModalContent'>
                <input type="text" id="txtcount" class="text-info"><label id="lblId" />                
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-default" data-dismiss="modal" onclick="UpdateAccessoriesCounts()" >Save Changes</button>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#mainTable').DataTable();
        $('.dataTables_filter').addClass('pull-right');
    });

    function ShowOrderDetails(Id) {
     
        $('#lblId').text(Id);
        $('#AccessoriesModal').show();
    }

    function closeModelbutton()
    {
        var options = { "backdrop": "true", keyboard: true };
        $('#AccessoriesModal').hide();
        $('.modal-backdrop').remove();
    }

    function UpdateAccessoriesCounts()
    {
        var Id = $('#lblId').text();
        var accessoriesCount = $('#txtcount').val();
        alert(Id, accessoriesCount);
    }

</script>
 