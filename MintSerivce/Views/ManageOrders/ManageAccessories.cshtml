
@using System.Linq;
@using MintSerivce.Models
@model ViewModel
@{
    ViewBag.Title = "Returned Orders";
}
@Html.AntiForgeryToken()


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>

<div class="form-horizontal" style="margin-left:20px;margin-top:5px;">


    <table class="table table-bordered table-responsive table-hover" align="center" id="mainTable" style="width:50%;">
        <thead style="background-color:#959ca1;color:white">
            <tr>
                <th>ACCESSORIES TYPE</th>
                <th>AVAILABLE STOCK  COUNT</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.AccessoriesStock)
            {
                <tr>
                    <td>
                        <a href="javascript:ShowOrderDetails('@item.Id')">@item.AccessoryType</a>
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.AvailableStockCount)</td>
                </tr>
            }
        </tbody>
    </table>
</div>


